<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".QuoteApplicantActivity" >

    <TextView
        android:id="@+id/textView1"
        style="@style/PDActivityHeader"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/header_quoteApplicant"
        android:textAlignment="center" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_firstName" />

            <EditText
                android:id="@+id/txtFirstName"
                style="@style/PDEditText"
                android:hint="@string/label_firstName" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_middleInitial" />

            <EditText
                android:id="@+id/txtMiddleInitial"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_middleInitial"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_lastName" />

            <EditText
                android:id="@+id/txtLastName"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_lastName"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_address" />

            <EditText
                android:id="@+id/txtAddress"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_address"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_city" />

            <EditText
                android:id="@+id/txtCity"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_city"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_state" />

            <EditText
                android:id="@+id/txtState"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_state"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_zip" />

            <EditText
                android:id="@+id/txtZip"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_zip"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_dateBirth" />

            <EditText
                android:id="@+id/txtDateBirth"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_dateBirth"
                android:inputType="text"
                />

        </TableRow>

        <TableRow
            android:id="@+id/TableRow05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_ssn" />

            <EditText
                android:id="@+id/txtSSN"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_ssn"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_email" />

            <EditText
                android:id="@+id/txtEmail"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_email"
                android:inputType="textEmailAddress" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_residency" />

            <EditText
                android:id="@+id/txtResidency"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_residency"
                android:inputType="text" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnSaveNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/button_quoteSaveGotoNext" />

</RelativeLayout>