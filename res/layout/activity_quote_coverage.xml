<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".QuoteCoverageActivity" >

    <TextView
        android:id="@+id/textView1"
        style="@style/PDActivityHeader"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/header_quoteCoverage"
        android:textAlignment="center" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_bodilyInjury" />

            <EditText
                android:id="@+id/txtBodilyInjury"
                style="@style/PDEditText"
                android:hint="@string/label_bodilyInjury" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_propertyDamage" />

            <EditText
                android:id="@+id/txtPropertyDamage"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_propertyDamage"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_medicalProvider" />

            <EditText
                android:id="@+id/txtMedicalProvider"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_medicalProvider"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_personalInjuryProtection" />

            <EditText
                android:id="@+id/txtPersonalInjuryProtection"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_personalInjuryProtection"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_propertyProtection" />

            <EditText
                android:id="@+id/txtPropertyProtection"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_propertyProtection"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_uninsuredMotoristLimit" />

            <EditText
                android:id="@+id/txtUninsuredMotoristLimit"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_uninsuredMotoristLimit"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_underInsuredLimit" />

            <EditText
                android:id="@+id/txtUnderinsuredLimit"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_underInsuredLimit"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_miniTort" />

            <EditText
                android:id="@+id/txtMiniTort"
                style="@style/PDEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/label_miniTort"
                android:inputType="text"
                />

        </TableRow>        
    </TableLayout>

    <Button
        android:id="@+id/btnSaveNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/button_quoteSaveGotoNext" />


</RelativeLayout>
